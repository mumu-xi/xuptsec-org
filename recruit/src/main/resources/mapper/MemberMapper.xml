<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//com.mapper.mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.xuptsec.recruit.dao.MemberMapper">
    <resultMap id="memberMap" type="member">

        <result column="realname" property="peopleName"></result>

        <result column="introduction" property="str"></result>

    </resultMap>
    <select id="findLabMemberByPage" resultMap="memberMap">
      select realname,introduction from tb_lab_member  order by class  limit ${pageNum},${pageSize}
    </select>
    <select id="findTotalMember" resultType="int">
        select count(*) from tb_lab_member
    </select>
</mapper>